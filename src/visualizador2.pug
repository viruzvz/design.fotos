extends /design.shell/src/layout

block stylesheets
  link(rel="stylesheet" href="styles/vendors.css")
  link(rel="stylesheet" href="styles/main.css")

block portaltopo

  .container
    include pug/portaltopo

block navglobal
  include pug/partials/navglobal

include pug/partials/mixins

block content
  .full-container.u-spacer--xl.l-box--screen(class='+graydeep')
    .container.u-posRelative
      .row
        .col-md-9
          .Embed.Embed--16by9
            img.img-responsive.img-fluid(src='https://unsplash.it/800/600?randon')
        .col-md-3
          .l-box(class='+grayless')
            .row
              .col-md-4
                img.img-responsive(src='assets/flickr/NikonD100.png', alt='NikonD100')
              .col-md-8
                .l-letter
                  p.eta: a(href='#' role='camera name') Nikon D5100
                  small 18-105mm f/3.5-5.6
            ul.list-unstyled
              li
                img(src='assets/flickr/aperture.svg')
                | &nbsp; f/5.6
              li
                img(src='assets/flickr/exposureTime.svg')
                | &nbsp; 1/60
              li
                img(src='assets/flickr/flash.svg')
                | &nbsp; Flash (auto, fired)
            ul.list-unstyled
              li
                img(src='assets/flickr/focal-length.svg')
                | &nbsp; 106.8 mm
              li
                img(src='assets/flickr/iso.svg')
                | &nbsp; 3200
              li
                img(src='assets/flickr/showEXIF.svg')
                a(href='#') &nbsp; Show EXIF
            p
              span.glyphicon.glyphicon-copyright-mark &nbsp;
              | Alguns direitos reservados
            p
              spam.glyphicon.glyphicon-calendar &nbsp;
              i Tirada em 31 de março de 2017
            button.btn.btn-lg.btn-success Baixar
            +carousel-buttons
  .container
    .row.u-spacer--xl
      .col-md-12.u-spacer
        p.zeta Plenário do Senado
        p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim ven
        dl
          dt Foto:
          dd João da Silva
          dt Local:
          dd Agência Senado

    .row.u-spacer--xl
      .col-md-12.Segments
        .Apex.Apex--default.delta.u-spacer--lg Fotos Semelhantes
    .row.u-spacer--xl
      .col-md-12
        .row.u-spacer--xl
          - for (var i = 0; i < 6; i++) {
            .col-md-2.u-spacer--lg
              +thumbs
            - }
    .row.u-spacer--xl
      .col-md-12.Segments
        .Apex.Apex--default.delta.u-spacer--lg Tags
    .row.u-spacer--xl
      .col-md-12.text-center
        ul.list-unstyled.list-inline
          - for (var i = 0; i < 50; i++) {
            li.l-letter: a.label.label-default(href='#') tag
            - }

  script(src="//code.jquery.com/jquery-3.1.1.min.js")
  script(src="js/main.js")
