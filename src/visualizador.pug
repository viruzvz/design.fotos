              li
                span.glyphicon.glyphicon-cog &nbsp;
                | Flash (auto, fired)
          .col-md-6
            ul.list-unstyled
              li
                span.glyphicon.glyphicon-cog &nbsp;
                | 106.8 mm
              li
                span.glyphicon.glyphicon-cog &nbsp;
                | 3200
              li
                span.glyphicon.glyphicon-cog &nbsp;
                a(href='#') Show EXIF
    .row.u-spacer--xl
      .col-md-12.Segments
        .Apex.Apex--default.delta.u-spacer--lg Fotos Semelhantes
    .row.u-spacer--xl
      .col-md-12
        .row.u-spacer--xl
          - for (var i = 0; i < 6; i++) {
            .col-md-2.u-spacer--lg
              +thumbs
            - }
    .row.u-spacer--xl
      .col-md-12.Segments
        .Apex.Apex--default.delta.u-spacer--lg Tags
    .row.u-spacer--xl
      .col-md-12.text-center
        ul.list-unstyled.list-inline
          - for (var i = 0; i < 50; i++) {
            li.l-letter: a.label.label-default(href='#') tag
            - }

  script(src="//code.jquery.com/jquery-3.1.1.min.js")
